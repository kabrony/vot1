# Example .env file for Enhanced Research Agent
# Copy this file to .env and fill in your API keys

# Required: Anthropic API Key for Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Perplexity API Key for web research
# Get from: https://perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: GitHub Token for code search
# Generate at: https://github.com/settings/tokens
# Required scopes: repo, read:packages
GITHUB_TOKEN=your_github_token_here

# Optional: Composio API Key for MCP integration
# Get from: https://composio.dev/dashboard/api-keys
COMPOSIO_API_KEY=your_composio_api_key_here
COMPOSIO_MCP_URL=your_composio_mcp_url_here
COMPOSIO_CONNECTION_ID=your_composio_connection_id_here

# System Configuration
MEMORY_PATH=memory/agent
HEALTH_CHECK_INTERVAL=60
ENABLE_AUTO_REPAIR=true
ENABLE_AUTONOMOUS_MODE=false

# Model Configuration
# Claude API
CLAUDE_MODEL=claude-3-7-sonnet-20250219
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# Perplexity API
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online
PERPLEXITY_MAX_TOKENS=4096
PERPLEXITY_TEMPERATURE=0.7

# TRILOGY BRAIN Configuration
TRILOGY_BRAIN_ENABLED=true
TRILOGY_BRAIN_MEMORY_PATH=memory/trilogy
TRILOGY_BRAIN_CONSOLIDATION_INTERVAL=3600
TRILOGY_BRAIN_FEEDBACK_THRESHOLD=5

# Application Settings
VOT1_MEMORY_PATH=/path/to/memory/storage
VOT1_DASHBOARD_HOST=127.0.0.1
VOT1_DASHBOARD_PORT=5000
VOT1_LOG_LEVEL=INFO
FLASK_SECRET_KEY=generate_a_random_secret_key

# Model Configuration
VOT1_PRIMARY_MODEL=claude-3-7-sonnet-20240620
VOT1_SECONDARY_MODEL=pplx-70b-online
VOT1_MAX_THINKING_TOKENS=8192

# GitHub Integration
GITHUB_REPO=vot1
GITHUB_OWNER=yourusername

# Database Configuration (if using remote vector store)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_USER=root
VECTOR_DB_PASSWORD=password

# Feature Flags
VOT1_ENABLE_SELF_IMPROVEMENT=true
VOT1_ENABLE_WEB_SEARCH=true
VOT1_ENABLE_HYBRID_MODE=true

# Optional Configuration
# Set to 'development', 'testing', or 'production'
VOT1_ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VOT1_LOGGING_LEVEL=INFO

# Default Claude model (using the latest model)
VOT1_DEFAULT_MODEL=claude-3.7-sonnet-20240620

# Default max tokens (defaults to 1024 if not set)
VOT1_MAX_TOKENS=1024

# Enable or disable anonymous usage metrics (true/false)
VOT1_COLLECT_METRICS=false 