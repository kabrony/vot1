# VOT1 Environment Configuration Example
# Copy this file to .env and fill in your values

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
VOT1_API_KEY=your_vot1_api_key_here
GITHUB_TOKEN=your_actual_github_token_here

# Application Settings
VOT1_MEMORY_PATH=/path/to/memory/storage
VOT1_DASHBOARD_HOST=127.0.0.1
VOT1_DASHBOARD_PORT=5000
VOT1_LOG_LEVEL=INFO
FLASK_SECRET_KEY=generate_a_random_secret_key

# Model Configuration
VOT1_PRIMARY_MODEL=claude-3-7-sonnet-20240620
VOT1_SECONDARY_MODEL=pplx-70b-online
VOT1_MAX_THINKING_TOKENS=20000

# GitHub Integration
GITHUB_REPO=yourrepository
GITHUB_OWNER=yourusername

# Database Configuration (if using remote vector store)
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=19530
VECTOR_DB_USER=root
VECTOR_DB_PASSWORD=password

# Feature Flags
VOT1_ENABLE_SELF_IMPROVEMENT=true
VOT1_ENABLE_WEB_SEARCH=true
VOT1_ENABLE_HYBRID_MODE=true

# Optional Configuration
# Set to 'development', 'testing', or 'production'
VOT1_ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VOT1_LOGGING_LEVEL=INFO

# Default Claude model (using the latest model)
VOT1_DEFAULT_MODEL=claude-3.7-sonnet-20240620

# Default max tokens (defaults to 1024 if not set)
VOT1_MAX_TOKENS=1024

# Enable or disable anonymous usage metrics (true/false)
VOT1_COLLECT_METRICS=false

# GitHub Automation Configuration
# Copy this file to .env and fill in your actual values

# Required: GitHub Personal Access Token with repo, workflow, and admin:repo_hook permissions
GITHUB_TOKEN=your_actual_github_token_here

# Default repository to analyze (can be overridden with command line args)
GITHUB_OWNER=yourusername
GITHUB_REPO=yourrepository

# Feature flags (set to any value to enable, leave empty to disable)
# Example: USE_COMPOSIO=true
USE_COMPOSIO=
USE_PERPLEXITY=
DEEP_ANALYSIS=
AUTO_APPROVE=
CREATE_WEBHOOK=

# Webhook configuration (if CREATE_WEBHOOK is enabled)
WEBHOOK_URL=https://your-webhook-endpoint.com/github

# Analysis configuration
UPDATE_AREAS="documentation workflows code_quality dependencies"
MAX_UPDATES=3

# Advanced settings
# MCP_API_KEY=your_mcp_api_key  # Only needed for certain advanced features 

# Development Assistant Configuration
VOT1_SMART_TOKEN_MANAGEMENT=true 