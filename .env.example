# VOT1 Configuration
# Copy this file to .env and fill in your values

# Required: Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-api03-your-key

# Optional: GitHub Integration
GITHUB_TOKEN=your_github_token
GITHUB_REPO=your_repo_name
GITHUB_OWNER=your_github_username

# Optional: Perplexity API Search Integration
PERPLEXITY_API_KEY=your_perplexity_api_key

# Optional: Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Optional Configuration
# Set to 'development', 'testing', or 'production'
VOT1_ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
VOT1_LOG_LEVEL=INFO

# Default Claude model (using the latest model)
VOT1_DEFAULT_MODEL=claude-3.7-sonnet-20240620

# Default max tokens (defaults to 1024 if not set)
VOT1_MAX_TOKENS=1024

# Enable or disable anonymous usage metrics (true/false)
VOT1_COLLECT_METRICS=false 